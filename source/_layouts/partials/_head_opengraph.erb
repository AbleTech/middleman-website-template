<meta property="og:title"       content="<%= current_page.data.title || data.site.title %> | <%= data.site.name %>">
<meta property="og:description" content="<%= current_page.data.description || data.site.description %>" name="description">
<meta property="og:url"         content="<%= current_page.url %>">
<meta property="og:type"        content="<%= current_page.data.try(:opengraph).try(:type) || data.site.opengraph.try(:type) || 'website' %>">
<meta property="og:image"       content="<%= current_page.data.try(:opengraph).try(:image_url) || '/opengraph.png' %>">
