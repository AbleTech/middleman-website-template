{
  "name": "middleman-website-template",
  "version": "2.0.0",
  "description": "A Webpack-powered Middleman Template curated by Abletech & @ndorfin",
  "scripts": {
    "build": "npm run lint && npm run webpack:build",
    "clean": "npm run clean:build & npm run clean:tmp",
    "clean:build": "rimraf ./build",
    "clean:tmp": "rimraf ./.tmp",
    "lint": "npm run lint:js & npm run lint:scss",
    "lint:js": "npm run lint:js:source",
    "lint:js:all": "eslint . -c ./config/eslint.json",
    "lint:js:source": "eslint ./source -c ./config/eslint.json",
    "lint:scss": "stylelint ./source --config ./config/stylelint.json",
    "size": "size-limit",
    "webpack:build": "npm run clean && webpack --config ./config/webpack.build.config.js",
    "webpack:server": "npm run clean:tmp && webpack --config ./config/webpack.server.config.js"
  },
  "size-limit": [
    {
      "path": "./source/**/*.js",
      "limit": "100 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbleTech/middleman-website-template.git"
  },
  "keywords": [
    "static-site",
    "static-site-generator",
    "middleman",
    "webpack",
    "middleman-template"
  ],
  "author": "@abletech, @ndorfin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AbleTech/middleman-website-template/issues"
  },
  "homepage": "https://github.com/AbleTech/middleman-website-template#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "name-all-modules-plugin": "^1.0.1",
    "node-sass": "^4.5.3",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "size-limit": "^0.11.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-scss": "^2.1.0",
    "webpack": "^3.6.0"
  }
}
